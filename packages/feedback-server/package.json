{
  "name": "@react-visual-feedback/server",
  "version": "0.1.0",
  "description": "Centralized feedback server for react-visual-feedback",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "generate:api": "tsp compile typespec/main.tsp",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "feedback",
    "server",
    "api",
    "react-visual-feedback"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.6.0",
    "drizzle-orm": "^0.35.0",
    "better-sqlite3": "^11.5.0",
    "zod": "^3.23.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/better-sqlite3": "^7.6.0",
    "@typespec/compiler": "^0.64.0",
    "@typespec/http": "^0.64.0",
    "@typespec/openapi3": "^0.64.0",
    "@typespec/rest": "^0.64.0",
    "drizzle-kit": "^0.27.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
