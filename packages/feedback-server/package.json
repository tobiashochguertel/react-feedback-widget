{
  "name": "@react-visual-feedback/server",
  "version": "0.1.0",
  "description": "Centralized feedback server for react-visual-feedback",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "generate:api": "tsp compile typespec/main.tsp",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "feedback",
    "server",
    "api",
    "react-visual-feedback"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.11.4",
    "drizzle-orm": "^0.45.1",
    "better-sqlite3": "^12.6.2",
    "zod": "^4.3.5",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/better-sqlite3": "^7.6.13",
    "@typespec/compiler": "^1.8.0",
    "@typespec/http": "^1.8.0",
    "@typespec/openapi3": "^1.8.0",
    "@typespec/rest": "^0.78.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2"
  },
  "peerDependencies": {
    "typescript": ">=5.9.3"
  },
  "engines": {
    "bun": ">=1.3.6"
  }
}
