{
  "name": "@react-visual-feedback/server",
  "version": "0.1.0",
  "description": "Centralized feedback server for react-visual-feedback",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "generate": "bun run generate:openapi && bun run generate:types",
    "generate:openapi": "tsp compile typespec/main.tsp",
    "generate:types": "openapi-typescript src/generated/openapi.yaml -o src/generated/api-types.d.ts",
    "generate:api": "bun run generate",
    "db:init": "bun run src/db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "feedback",
    "server",
    "api",
    "react-visual-feedback"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@feedback/api-types": "workspace:*",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-validator": "^0.7.6",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "js-yaml": "^4.1.1",
    "nanoid": "^5.1.6",
    "openapi-fetch": "^0.15.0",
    "postgres": "^3.4.8",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bun": "^1.3.6",
    "@types/js-yaml": "^4.0.9",
    "@typespec/compiler": "^1.8.0",
    "@typespec/http": "^1.8.0",
    "@typespec/openapi": "^1.8.0",
    "@typespec/openapi3": "^1.8.0",
    "@typespec/rest": "^0.78.0",
    "@vitest/coverage-v8": "^4.0.17",
    "bun-types": "^1.3.6",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "peerDependencies": {
    "typescript": ">=5.9.3"
  },
  "engines": {
    "bun": ">=1.3.6"
  }
}
