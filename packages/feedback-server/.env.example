# Environment Configuration
# Copy this file to .env and fill in the values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Database Configuration
# SQLite (default for development)
DATABASE_URL=file:./data/feedback.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/feedback

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Video Configuration
VIDEO_CHUNK_SIZE=1048576   # 1MB chunk size for uploads
VIDEO_MAX_DURATION=300     # 5 minutes max duration

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here
API_KEY_SALT=your-salt-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000     # 1 minute
RATE_LIMIT_MAX_REQUESTS=100    # per window

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json # json or pretty

# Feature Flags
ENABLE_VIDEO_UPLOAD=true
ENABLE_WEBSOCKET=true
ENABLE_COMPRESSION=true
