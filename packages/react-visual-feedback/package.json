{
  "name": "react-visual-feedback",
  "version": "2.2.5",
  "description": "A visual feedback widget for React applications with element selection, screenshot capture, professional dashboard, and Jira/Google Sheets integrations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/types/integrations/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    },
    "./server/jira": {
      "types": "./dist/types/integrations/jira.d.ts",
      "import": "./dist/server/jira.js",
      "require": "./dist/server/jira.js"
    },
    "./server/sheets": {
      "types": "./dist/types/integrations/sheets.d.ts",
      "import": "./dist/server/sheets.js",
      "require": "./dist/server/sheets.js"
    },
    "./integrations": {
      "types": "./dist/types/integrations/index.d.ts",
      "import": "./dist/integrations/index.js",
      "require": "./dist/integrations/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bunx rollup -c rollup.config.ts --configPlugin typescript",
    "build:watch": "bunx rollup -c rollup.config.ts --configPlugin typescript --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test --config=playwright-e2e.config.ts",
    "test:e2e:ui": "playwright test --config=playwright-e2e.config.ts --ui",
    "test:bdd": "bddgen && playwright test",
    "test:bdd:ui": "bddgen && playwright test --ui",
    "test:bdd:headed": "bddgen && playwright test --headed",
    "bddgen": "bddgen",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist coverage test-results playwright-report .features-gen",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "react",
    "feedback",
    "widget",
    "screenshot",
    "bug-report",
    "user-feedback",
    "dashboard",
    "feedback-management",
    "status-tracking",
    "issue-tracker",
    "jira",
    "jira-integration",
    "google-sheets",
    "zapier",
    "screen-recording"
  ],
  "author": "Murali <murali.g@hyperverge.co>",
  "license": "MIT",
  "homepage": "https://react-library-demo-rosy.vercel.app/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Murali1889/react-feedback-widget.git"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "styled-components": "^5.0.0 || ^6.0.0"
  },
  "dependencies": {
    "@xstate/react": "^6.0.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.263.1",
    "modern-screenshot": "^4.6.7",
    "xstate": "^5.25.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^25.0.8",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "jsdom": "^27.4.0",
    "playwright-bdd": "^8.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.55.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "styled-components": "^6.3.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
